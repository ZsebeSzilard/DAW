@model IEnumerable<WORLD_OF_DUEL_MASTERS.Models.Card>

@{
    ViewData["Title"] = "EditDeckUser";
    Layout = "_UserLayout";
}
    <br />
<h1 class="text-center">Edit Your Deck</h1>
<br />


<table class="table">
    <thead>
        <tr>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Civilization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Power)
            </th>
            <th>
                    <a asp-action="AddCard">Add Card</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="text-left">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Civilization != "" && item.Civilization != null)
                {
                    @Html.DisplayFor(modelItem => item.Civilization)
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Civilizations0)
                    <a>&#47;<br /></a>
                    @Html.DisplayFor(modelItem => item.Civilizations1)
                }


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>

            <td>
                @if (item.Race != "" && item.Race != null)
                {
                    @Html.DisplayFor(modelItem => item.Race)
                }
                else
                {
                    if (item.Races0 != "" && item.Races1 != null)
                    {
                        @Html.DisplayFor(modelItem => item.Races0)
                        <a>&#47;<br /></a>
                        @Html.DisplayFor(modelItem => item.Races1)
                    }
                    else
                    {
                        <a>-</a>
                    }

                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Power)
            </td>
            <td>
                <!--<a asp-action="CardDetailsUser" asp-route-id="@item.CardID">More details</a> |-->
                <!--<a asp-action="Delete" asp-route-id="@item.CardID">Delete</a>-->
                </td>
            </tr>
            }
        </tbody>
    </table>

@model IEnumerable<WORLD_OF_DUEL_MASTERS.Models.DMCard>

@{
    ViewData["Title"] = "Index";
    Layout = "_UserLayout";
}
<br />
<h1 class="text-center">Select a card to add to your deck!</h1>

<div class="float-right">
    <div>

        @using (Html.BeginForm("Index", "Card", FormMethod.Get))
        {
            @Html.TextBox("searching")
            <input type="submit" value="Search By Name" />
        }


    </div>
</div>

<table class="table text-center">
    <thead>
        <tr>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Civilization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Power)
            </th>
        </tr>
    </thead>





    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.Civilization != "" && item.Civilization != null)
                    {
                        @Html.DisplayFor(modelItem => item.Civilization)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Civilizations0)
                        <a>&#47;<br /></a>
                        @Html.DisplayFor(modelItem => item.Civilizations1)
                    }


                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>

                <td>
                    @if (item.Race != "" && item.Race != null)
                    {
                        @Html.DisplayFor(modelItem => item.Race)
                    }
                    else
                    {
                        if (item.Races0 != "" && item.Races1 != null)
                        {
                            @Html.DisplayFor(modelItem => item.Races0)
                            <a>&#47;<br /></a>
                            @Html.DisplayFor(modelItem => item.Races1)
                        }
                        else
                        {
                            <a>-</a>
                        }

                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Power)
                </td>

                <td>
                    <a asp-action="AddToYourDeckCard" asp-route-id="@item.CardID">Add To Your Deck</a>
                </td>
            </tr>

        }

    </tbody>

</table>

